<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">




    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_second"
        android:layout_width="112dp"
        android:layout_height="112dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <ImageView
            android:id="@+id/img_nowLive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/banner"
            android:scaleType="fitXY"
            android:clipToOutline="true"
            android:outlineProvider="background"/>




    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/img_nowlive_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ico_video"
        android:layout_margin="4dp"
        app:layout_constraintTop_toTopOf="@id/cardView_second"
        app:layout_constraintEnd_toEndOf="@id/cardView_second"/>



    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="11dp"
        app:layout_constraintStart_toEndOf="@+id/cardView_second"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >


        <ImageView
            android:id="@+id/img_Content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/bdg_contents"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_live_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="오늘도 화이팅하세요~!!"
            android:lineSpacingExtra="3sp"
            android:fontFamily="@font/suit_semibold"
            android:textColor="#303030"
            android:textSize="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_Content" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ctl_nowLiveDj"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_live_title">


            <ImageView
                android:id="@+id/img_live_medal3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ico_male"
                app:layout_constraintStart_toStartOf="@id/img_live_medal"
                app:layout_constraintEnd_toEndOf="@+id/img_live_medal"
                app:layout_constraintTop_toTopOf="@+id/img_live_medal"
                app:layout_constraintBottom_toBottomOf="@+id/img_live_medal"/>




            <ImageView
            android:id="@+id/img_live_medal"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:src="@drawable/ico_female"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />





        <ImageView
            android:id="@+id/img_live_medal2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ico_male"
            android:layout_marginLeft="2dp"
            app:layout_constraintStart_toEndOf="@+id/img_live_medal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <TextView
            android:id="@+id/tv_live_djname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="쏭디제"
            android:textSize="13dp"
            android:layout_marginLeft="2dp"
            android:fontFamily="@font/suit_regular"
            app:layout_constraintStart_toEndOf="@+id/img_live_medal2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@+id/ctl_nowLiveDj"
            app:layout_constraintStart_toStartOf="parent">


        <ImageView
            android:id="@+id/img_peopele_g"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/people_g_s"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tv_people_g"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="22"
            android:fontFamily="@font/suit_medium"
            android:lineSpacingExtra="13sp"
            app:layout_constraintStart_toEndOf="@+id/img_peopele_g"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/img_heart"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/heart"
            android:layout_marginLeft="10dp"
            app:layout_constraintStart_toEndOf="@+id/tv_people_g"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>


            <TextView
            android:id="@+id/tv_heart"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="234"
            android:fontFamily="@font/suit_medium"
            android:lineSpacingExtra="10sp"
            app:layout_constraintStart_toEndOf="@+id/img_heart"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>


        </androidx.constraintlayout.widget.ConstraintLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.constraintlayout.widget.ConstraintLayout>